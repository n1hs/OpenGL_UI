<UserControl x:Class="DoAn_OpenGL.UserControls.DrawControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Width="250">
    <StackPanel >
        <TextBlock HorizontalAlignment="Center"
                   Margin="5"
                   Style="{StaticResource MaterialDesignHeadline6TextBlock}">
            Kiểu vẽ
        </TextBlock>
        <StackPanel 
  Orientation="Horizontal"
  Margin="4">
            <RadioButton Width="65"
    Style="{StaticResource MaterialDesignTabRadioButton}"
    IsChecked="True"
    Content="POINT" />
            <RadioButton Width="65"
    Style="{StaticResource MaterialDesignTabRadioButton}"
    IsChecked="False"
    Content="LINES" />
            <RadioButton Width="65"
    Style="{StaticResource MaterialDesignTabRadioButton}"
    IsChecked="False"
    Content="SOLID" />
        </StackPanel>

        <Separator />

        <TextBlock HorizontalAlignment="Center"
                   Margin="5"
                   Style="{StaticResource MaterialDesignHeadline6TextBlock}">
            Hình vẽ
        </TextBlock>

        <Grid HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Button Content="{materialDesign:PackIcon Kind=Cube}"
                    Height="46"
                    Width="46"
                    ToolTip="Cube" />
            <Button Content="{materialDesign:PackIcon AirplaneTakeoff}"
                    Grid.Column="1"
                    Height="46"
                    Width="46"
                    ToolTip="Icon" />
            <Button Content="{materialDesign:PackIcon AirplaneTakeoff}"
                    Grid.Column="2"
                    Height="46"
                    Width="46"
                    ToolTip="Icon" />
            <Button Content="{materialDesign:PackIcon AirplaneTakeoff}"
                    Grid.Column="3"
                    Height="46"
                    Width="46"
                    ToolTip="Icon" />
            <Button Content="{materialDesign:PackIcon AirplaneTakeoff}"
                    Grid.Row="1"
                    Height="46"
                    Width="46"
                    ToolTip="Icon" />
            <Button Content="{materialDesign:PackIcon AirplaneTakeoff}"
                    Grid.Column="1"
                    Grid.Row="1"
                    Height="46"
                    Width="46"
                    ToolTip="Icon" />
            <Button Content="{materialDesign:PackIcon AirplaneTakeoff}"
                    Grid.Column="2"
                    Grid.Row="1"
                    Height="46"
                    Width="46"
                    ToolTip="Icon" />
            <Button Content="{materialDesign:PackIcon AirplaneTakeoff}"
                    Grid.Column="3"
                    Grid.Row="1"
                    Height="46"
                    Width="46"
                    ToolTip="Icon" />
            <Button Content="{materialDesign:PackIcon AirplaneTakeoff}"
                    Grid.Row="2"
                    Height="46"
                    Width="46"
                    ToolTip="Icon" />
            <Button Content="{materialDesign:PackIcon AirplaneTakeoff}"
                    Grid.Column="1"
                    Grid.Row="2"
                    Height="46"
                    Width="46"
                    ToolTip="Icon" />
        </Grid>
    </StackPanel>
</UserControl>
